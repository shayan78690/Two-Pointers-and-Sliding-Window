class Solution {
    public int numberOfSubstrings(String s) {
        int n = s.length();
        int count = 0;

        for (int i = 0; i < n; i++) {
            int map[] = new int[3];

            for (int j = i; j < n; j++) {
                map[s.charAt(j) - 'a']++;
                if (map[0] > 0 && map[1] > 0 && map[2] > 0) {
                    count += (n-j);
                    break;
                }
            }
        }
        return count;
    }
}
